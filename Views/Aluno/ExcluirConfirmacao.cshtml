@model Aluno


<style>
    body {
        background: url(" https://img.freepik.com/vetores-gratis/fluxo-de-vetor-de-design-de-codigo-binario_53876-161365.jpg? ") no-repeat center center fixed;
        background-size: cover;
    }

    .blur {
        background: url("https://img.freepik.com/vetores-gratis/fluxo-de-vetor-de-design-de-codigo-binario_53876-161365.jpg?") no-repeat center center fixed;
        background-size: cover;
        overflow: hidden;
        filter: blur(13px);
        position: absolute;
        height: 300px;
        top: -50px;
        left: -50px;
        right: -50px;
        bottom: -50px;
    }

    .widget {
        border-top: 2px solid rgba(255, 255, 255, 0.5);
        border-bottom: 2px solid rgba(255, 255, 255, 0.5);
        height: 350px;
        width: 100%;
        overflow: hidden;
    }

    .center {
        position: absolute;
        margin: auto;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
    }

    /*  NOT REQUIRED  */

    .text {
        height: 250px;
        width: 340px;
    }

        .text p {
            text-align: center;
            color: #ffffff;
            text-shadow: 1px 1px rgba(0, 0, 0, 0.1);
            margin-top: 0px;
            font-family: "Lato", serif;
            font-weight: 400;
            font-size: 30px;
        }

    .login-button {
        width: 100%;
        border-radius: 5px;
        background: hsla(201, 100%, 50%, 0.1);
        border: 1px solid hsl(201, 100%, 50%);
        outline: none;
        font-size: 1.5em;
        color: #fff;
        font-weight: lighter;
        margin-top: 20px;
        cursor: pointer;
        display: inline-block;
       
    }

        .login-button:hover {
            background-color: hsla(201, 100%, 50%, 0.3);
            
        }

        .login-button:focus {
            background-color: hsla(201, 100%, 50%, 0.5);
        }

</style>
<div class="widget center">

    <div class="blur"></div>

    <div class="text center">
       
        <p>Você tem certeza que deseja apagar o cadastro </br>@Model.Nome ??</p>

        <div class="text-center">
            <a type="submit" class="login-button" role="button" asp-controller="Aluno" asp-action="Aluno">Cancelar Exclusão</a>
            <a type="submit" class="login-button" role="button"  asp-route-id="@Model.Id" asp-controller="Aluno" asp-action="Apagar">Confirmar Exclusão</a>
        </div>
    </div>
   
</div>

